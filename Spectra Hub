--// Fun√ß√£o para criar bot√µes
local function createButton(name, yPosition, callback)
local btn = Instance.new("TextButton")
btn.Size = UDim2.new(0, 200, 0, 40)
btn.Position = UDim2.new(0.5, -100, 0, yPosition)
btn.BackgroundColor3 = Color3.fromRGB(120, 0, 180)
btn.Text = name
btn.TextColor3 = Color3.new(1, 1, 1)
btn.Font = Enum.Font.GothamBold
btn.TextSize = 18
btn.AutoButtonColor = false
btn.ZIndex = 4
btn.Parent = scroll

local uiCorner = Instance.new("UICorner")
uiCorner.CornerRadius = UDim.new(0, 6)
uiCorner.Parent = btn

btn.MouseEnter:Connect(function()
btn.BackgroundColor3 = Color3.fromRGB(170, 0, 255)
end)
btn.MouseLeave:Connect(function()
btn.BackgroundColor3 = Color3.fromRGB(120, 0, 180)
end)

btn.MouseButton1Click:Connect(callback)

end

--// Fun√ß√µes utilit√°rias
local function runWear(ids)
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Wear = ReplicatedStorage.Remotes.Wear
for _, id in ipairs(ids) do
pcall(function()
Wear:InvokeServer(id)
end)
end
end

local function changeColor(color)
pcall(function()
game:GetService("ReplicatedStorage").Remotes.ChangeBodyColor:FireServer(color)
end)
end

