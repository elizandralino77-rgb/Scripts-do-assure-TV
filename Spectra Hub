--// Fechar e minimizar
close.MouseButton1Click:Connect(function()
gui:Destroy()
end)

local minimized = false
minimize.MouseButton1Click:Connect(function()
if not minimized then
content.Visible = false
panel.Size = UDim2.new(0, 400, 0, 30)
minimized = true
else
content.Visible = true
panel.Size = UDim2.new(0, 400, 0, 250)
minimized = false
end
end)

task.spawn(function()
	local Players = game:GetService("Players")
	local player = Players.LocalPlayer
	local PlayerGui = player:WaitForChild("PlayerGui")

	-- Cria a interface principal
	local screenGui = Instance.new("ScreenGui")
	screenGui.Name = "CreditMessage"
	screenGui.ResetOnSpawn = false
	screenGui.Parent = PlayerGui

	-- Cria o som
	local sound = Instance.new("Sound")
	sound.SoundId = "rbxassetid://94433663716765"
	sound.Volume = 5
	sound.Parent = screenGui
	sound:Play()

	-- Cria o texto
	local textLabel = Instance.new("TextLabel")
	textLabel.Parent = screenGui
	textLabel.Size = UDim2.new(0, 550, 0, 60)
	textLabel.Position = UDim2.new(1, -570, 1, -70) -- canto inferior direito
	textLabel.BackgroundTransparency = 1
	textLabel.Text = "Esse script foi feito por assure_TV ‚Äî muito obrigado por usar o Spectra HUB üï∑Ô∏è / V1!!"
	textLabel.TextScaled = true
	textLabel.Font = Enum.Font.GothamBold
	textLabel.TextStrokeTransparency = 0.3
	textLabel.TextTransparency = 0

	-- Efeito RGB + brilho pulsante
	local RunService = game:GetService("RunService")
	local startTime = tick()

	local connection = RunService.RenderStepped:Connect(function()
		local t = tick() - startTime
		local r = math.sin(t * 5) * 127 + 128
		local g = math.sin(t * 5 + 2) * 127 + 128
		local b = math.sin(t * 5 + 4) * 127 + 128
		textLabel.TextColor3 = Color3.fromRGB(r, g, b)
		textLabel.TextStrokeTransparency = 0.2 + math.sin(t * 3) * 0.1
	end)

	-- Mostra por 5 segundos
	task.wait(5)

	-- Para o efeito e remove a mensagem
	connection:Disconnect()

	-- Efeito de desaparecimento suave
	local TweenService = game:GetService("TweenService")
	local desaparecer = TweenService:Create(textLabel, TweenInfo.new(1, Enum.EasingStyle.Sine, Enum.EasingDirection.In), {TextTransparency = 1})
	desaparecer:Play()
	desaparecer.Completed:Wait()

	screenGui:Destroy()
end)
